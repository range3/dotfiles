
# set aliases for frequently used commands
alias vi='vim'
alias ch='pushd +1'
alias b='bundle exec'
alias less='less -R'

# heroku
alias heroku-rebuild="git commit --amend -C HEAD; git push -f heroku master"

#for ls
alias ls='ls --color'
alias ll='ls -l'
alias la='ls -A'
alias lla='ls -la'

#typo
alias l='ls'
alias sl='ls'
alias scd='cd'
alias svi='vi'
